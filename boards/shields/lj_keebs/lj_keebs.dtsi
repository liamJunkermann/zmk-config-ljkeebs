    position_map {
        compatible = "zmk,physical-layout-position-map";

        default_layout {
            physical-layout = <&default_layout>;
            positions
                = < 6  7  2  0  3  8          9  4  1  5 10 11>
                , <18 19 14 12 15 20         21 16 13 17 22 23>
                , <30 31 26 24 27 32         33 28 25 29 34 35>
